/* ===== BASE GLOBALE ===== */
body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #EDF3FA;
    color: #333;
}

h2, h3 {
    margin-top: 0;
}

a {
    text-decoration: none;
    color: inherit;
}

/* ===== CONTENEUR PRINCIPAL ===== */
.main-container {
    display: flex;
    min-height: 100vh;
    width: 100vw; /* prendre toute la largeur de la fenêtre */
    box-sizing: border-box;
}


/* ===== MENU LATÉRAL ===== */
.sidebar {
    width: 250px;
    background-color: #00688B;
    color: white;
    padding: 20px;
    box-shadow: 2px 0 8px rgba(0,0,0,0.1);
    flex-shrink: 0;
}

.sidebar h2 {
    font-size: 22px;
    margin-bottom: 20px;
}

.sidebar form {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 20px;
}

.sidebar input,
.sidebar button {
    padding: 8px;
    font-size: 14px;
    border-radius: 4px;
    border: none;
}

.sidebar input[type="file"] {
    background-color: white;
}

.sidebar button {
    background-color: #4078A0;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.sidebar button:hover {
    background-color: #6B973F;
}

.btn-classe {
    width: 100%;
    background-color: #4078A0;
    color: white;
    padding: 10px;
    font-size: 14px;
    border-radius: 4px;
    text-align: left;
    cursor: pointer;
    border: none;
    transition: background-color 0.3s ease;
}

.btn-classe:hover {
    background-color: #6B973F;
}

/* ===== CONTENU PRINCIPAL ===== */
.content {
    flex: 1;
    padding: 40px 30px;
    min-width: 1400px; /* augmenter cette valeur selon l'écran */
    width:100%;
    box-sizing: border-box;
}

/* ===== BANDEAU TITRE ===== */
.bandeau-titre {
    background-color: #4078A0;
    color: white;
    padding: 20px;
    font-size: 26px;
    font-weight: bold;
    border-radius: 10px;
    text-align: center;
    margin-bottom: 30px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

/* ===== BOUTONS D'ACTION PRINCIPAUX ===== */
.action-button {
    background-color: #B5C800;
    color: white;
    padding: 10px 18px;
    border-radius: 6px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    transition: background-color 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    text-decoration: none;
    font-size: 16px;
    border: none;
    margin-bottom: 20px; /* espace sous boutons */
}

.action-button:hover {
    background-color: #6B973F;
}

/* ===== BOUTONS ICÔNES DANS LES TABLEAUX ===== */
.action-button.icon-btn {
    width: 30px;
    height: 30px;
    padding: 0;
    margin: 0 8px 0 0; /* petit espace à droite */
    font-size: 18px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border-radius: 6px;
    border: none;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    transition: background-color 0.3s ease;
    vertical-align: middle;
}

.action-button.icon-btn:hover {
    filter: brightness(0.8);
}

/* Bouton modifier (bleu) */
.action-button.modify.icon-btn {
    background-color: #007BFF;
}

.action-button.modify.icon-btn:hover {
    background-color: #0056b3;
}

/* Bouton supprimer (rouge) */
.action-button.delete.icon-btn {
    background-color: #dc3545;
}

.action-button.delete.icon-btn:hover {
    background-color: #a71d2a;
}

/* L’icône ne bloque pas le clic sur le bouton */
.action-button.icon-btn i {
    pointer-events: none;
}

/* Espacement entre boutons icônes */
.action-button.icon-btn + .action-button.icon-btn,
.action-button.icon-btn + form {
    margin-left: 8px;
}

/* ===== FORMULAIRES ===== */
form {
    max-width: 900px;
    margin: 0;
    padding-left: 20px;
    box-sizing: border-box;
}

.form-row {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px; /* espace sous les lignes formulaire, aussi pour boutons */
}

.form-row label {
    width: 150px;
    font-weight: bold;
}

.form-row input,
.form-row select {
    flex: 1;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 6px;
    background-color: #f9f9f9;
    box-sizing: border-box;
}

#objectifs-container {
    margin-top: 20px;
}

/* ===== BOUTONS VALIDER / ANNULER ===== */
.valider-btn,
.annuler-btn {
    padding: 10px 20px;
    border-radius: 6px;
    border: none;
    font-weight: bold;
    cursor: pointer;
    display: inline-block;
    font-size: 16px;
}

.valider-btn {
    background-color: #B5C800;
    color: white;
    margin-right: 15px;
}

.valider-btn:hover {
    background-color: #6B973F;
}

.annuler-btn {
    background-color: #ccc;
    color: black;
}

.annuler-btn:hover {
    background-color: #bbb;
}

/* ===== CONTENEUR TABLEAUX ===== */
.table-container {
    margin-top: 30px;
    border: 1px solid #ccc;
    border-radius: 10px;
    background-color: white;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    overflow-x: auto;
}

/* ===== TABLEAUX ===== */
table {
    width: 100%;
    border-collapse: collapse;
    font-size: 16px;
    margin-left: 0; /* assure alignement gauche */
}

thead {
    background-color: #00688B;
    color: white;
}

th,
td {
    padding: 12px 16px;
    border-bottom: 1px solid #ddd;
    text-align: left;
    vertical-align: middle;
}

tbody tr:nth-child(even) {
    background-color: #EDF3FA;
}

/* ===== TABLEAU DE SAISIE DES RÉSULTATS ===== */
.saisie-resultats {
    margin-left: 0;
    max-width: fit-content;
}

/* Pour le tableau des résultats */
.table-resultats {
    width: 100%;
    border-collapse: collapse;
    font-size: 15px;
    margin-top: 20px;
    box-sizing: border-box;
}

.table-resultats thead {
    background-color: #00688B;
    color: white;
}

/* Ligne d’en-tête plus haute pour bien loger le texte tourné */
.table-resultats thead tr {
    height: 140px;
}

/* Colonnes en-tête : largeur fixe uniforme */
.table-resultats thead th {
    padding: 8px 6px;
    width: 80px;
    max-width: 80px;
    text-align: center;
    vertical-align: center;
}

.table-resultats thead th div.rotate-90 {
    width: 80px;
    height: 140px;
    white-space: normal;
    word-wrap: break-word;
    overflow-wrap: break-word;
    font-size: 12px;
    line-height: 1.3;
    transform-origin: center center;
    transform: rotate(-90deg);
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 6px;
    box-sizing: border-box;
    text-align: center;  /* centrer le texte */
}

.table-resultats th,
.table-resultats td {
    border: 1px solid #ccc;
}

/* Cellule prénom + nom */
.table-resultats td.nom-prenom {
    max-width: 220px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    gap: 6px;
    align-items: center;
    text-align: left;
}

/* Prénom en gras */
.table-resultats td.nom-prenom .prenom {
    font-weight: bold;
    white-space: nowrap;
    flex-shrink: 0;
}

/* Nom tronqué si trop long */
.table-resultats td.nom-prenom .nom {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 120px;
    display: inline-block;
    vertical-align: bottom;
}

/* Colonne Absent (checkbox) */
.table-resultats td:nth-child(2),
.table-resultats thead th:nth-child(2) {
    width: 60px;
    max-width: 60px;
    text-align: center;
}

